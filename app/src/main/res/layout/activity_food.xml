<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chouf"
    tools:context=".FoodActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="410dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button1"
        android:text="Monday"
        android:textColor="#fcb711"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="410dp"
        android:layout_height="90dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/button2"
        android:text="Tuesday"
        android:textColor="#f37021"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="410dp"
        android:layout_height="90dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/button3"
        android:text="Wednesday"
        android:textColor="#cc004c"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="410dp"
        android:layout_height="90dp"
        android:layout_marginTop="324dp"
        android:background="@drawable/button4"
        android:text="Thursday"
        android:textColor="#6460aa"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="410dp"
        android:layout_height="90dp"
        android:layout_marginTop="416dp"
        android:background="@drawable/button5"
        android:text="Friday"
        android:textColor="#0089d0"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="410dp"
        android:layout_height="90dp"
        android:layout_marginTop="508dp"
        android:background="@drawable/button6"
        android:text="Saturday"
        android:textColor="#0db14b"
        android:textSize="30dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="274dp"
        android:layout_height="33dp"
        android:text="Check the Week menu "
        android:fontFamily="cursive"
        android:textSize="30dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="7dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>